
programa ejemplo
procesos
  proceso juntarFlores (ES cantFlores : numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cantFlores := cantFlores + 1
  fin
  
  proceso recorrerAvenida(ES cantFlores : numero)
  comenzar
    repetir 9
      juntarFlores(cantFlores)
      mover
    juntarFlores(cantFlores)
    
    
  fin
areas
  area1 : AreaP (1,1,1,10)
  area2 : AreaP (2,11,2,20)
robots
  robot robot1
  variables
    floresR1, floresR2 : numero
  comenzar
    floresR1 := 0
    recorrerAvenida(floresR1)
    EnviarMensaje(floresR1,r2)
    RecibirMensaje(floresR2, r2)
    si (floresR1 > floresR2)
      Informar('diferencia',floresR1 - floresR2)
  fin
  
  robot robot2
  variables
    floresR1, floresR2 : numero
  comenzar  
    floresR2 := 0  
    recorrerAvenida(floresR2)
    EnviarMensaje(floresR2, r1)
    RecibirMensaje(floresR1, r1)
    si (floresR1 < floresR2)
      Informar('diferencia', floresR2 - floresR1)
  fin
variables
  r1 : robot1
  r2 : robot2

comenzar
  AsignarArea(r1,area1)
  AsignarArea(r2, area2)
  Iniciar(r1,1,1)
  Iniciar(r2,2,11)
fin